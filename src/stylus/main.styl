@import 'nib'

html, body
	width 100%
	height 100%
	margin 0
	padding 0

.hiloupe
	position relative
	// background yellow
	width 100%
	height 100%
	overflow hidden
	user-select none

	figure
		margin 0
		padding 0
		transform-origin 0 0
		user-select none
		white-space nowrap
		position absolute
		opacity 0

		&.active
			opacity 1

		div.row
			font-size 0

			img
				margin-left 0
				margin-top 0
				user-select none
				width 240px
				height 240px
				// border 1px solid black
				box-sizing border-box
				// opacity 0



				// The last images in the row aren't 240px wide,
				// so the width is set to auto, to prevent overstrechting.
				&:last-child
					width auto

			// The images in the last row aren't 240px heigh,
			// so the height is set to auto, to prevent overstrechting.
			&:last-child
				img
					height auto
					vertical-align top

	#debug
		color white
		background black
		width 240px
		position fixed
		right 0
		bottom 0
		padding 20px
		box-sizing border-box
		border-top-left-radius 10px

		h4, ul
			margin 0
			padding 0

		ul
			list-style none
			margin-bottom 10px
			background #222

			label, span
				display inline-block

			label
				width 33%

			span
				width 67%
				overflow ellipsis